<Window x:Class="Line_Counter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Line_Counter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Project Line Counter" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" Margin="0,15" FontWeight="Medium" />
        <Button x:Name="choose_path_btn" Click="choose_path_btn_Click" Content="Choose Directory" Width="100" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,100,50,0" />
        <TextBlock x:Name="TBK_path" Margin="30,100,175,0" Height="25" VerticalAlignment="Top" />
        <ProgressBar x:Name="PB_1" Height="25" Width="500" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,100" />
        <Button IsEnabled="False" x:Name="start_btn" Click="start_btn_Click" Content="Start" Width="75" Height="25" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30"/>
    </Grid>
</Window>
